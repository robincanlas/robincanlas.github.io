{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "app/*": [
        "./app/*"
      ],
      "tests/*": [
        "./tests/*"
      ]
    },
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "extracted",
    "coverage",
    "dist"
  ]
}
